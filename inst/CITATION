citHeader("To cite hospitals in publications use:")

citEntry(
  entry    = "Manual",
  title    = "{An R data package of the Portuguese NHS hospitals}",
  author   = "Ramiro Magno",
  note     = "R package version 0.1.0",
  year     = "2021",
  url      = "https://doi.org/10.5281/zenodo.5729243",
  textVersion = paste(
    "Ramiro Magno. (2021). ",
    "An R data package of the Portuguese NHS hospitals (v0.1.0).",
    "Zenodo. https://doi.org/10.5281/zenodo.5729243."
  )
)
